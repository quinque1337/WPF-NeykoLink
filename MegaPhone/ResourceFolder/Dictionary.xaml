<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <SolidColorBrush x:Key="DarkBlue" Color="#030D1A"/>
    <SolidColorBrush x:Key="LightBlue" Color="#4681FF"/>
    <SolidColorBrush x:Key="BorderColor" Color="#031C2E"/>
    <SolidColorBrush x:Key="BigLabelColor" Color="#546AB4"/>
    <SolidColorBrush x:Key="SelectionColor" Color="#13649F"/>

    <!--Border-->
    <Style x:Key="DefaultBorder" 
           TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
    </Style>
    
    <!--TextBox-->
    <Style x:Key="DefaultTextBox"
           TargetType="TextBox"
           BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="SelectionBrush" Value="{StaticResource SelectionColor}"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Padding" Value="18,0,0,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="md:HintAssist.FontFamily" Value="Nunito"/>
        <Setter Property="md:HintAssist.HintPaddingBrush" Value="{DynamicResource DarkBlue}"/>
        <Setter Property="md:HintAssist.IsFloating" Value="False"/>
    </Style>

    <!--PasswordBox-->
    <Style x:Key="DefaultPasswordBox"
           TargetType="PasswordBox"
           BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="SelectionBrush" Value="{StaticResource SelectionColor}"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Padding" Value="18,0,18,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="md:HintAssist.FontFamily" Value="Nunito"/>
        <Setter Property="md:HintAssist.HintPaddingBrush" Value="{DynamicResource DarkBlue}"/>
        <Setter Property="md:HintAssist.IsFloating" Value="False"/>
    </Style>

</ResourceDictionary>